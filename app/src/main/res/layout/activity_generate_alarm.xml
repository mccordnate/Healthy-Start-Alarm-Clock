<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vandyhacks.dios.hsphuc.healthystart.GenerateAlarmActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"

        android:src="@drawable/alarmsbg"/>

    <Button
        android:id="@+id/beginmeasureheartratebutton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/redbutton"
        android:text="@string/measureheartrate"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="beginMeasureHeartRate"/>

</RelativeLayout>